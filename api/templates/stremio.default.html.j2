<svg width="320" height="{{height}}" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-labelledby="cardTitle" role="img">
  <title id="cardTitle">Now watching on Stremio</title>
  <foreignObject width="320" height="{{height}}">
    <style>
      div {
        font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
      }

      .container {
        background-color: #{{background_color}};
        border-radius: 10px;
        padding: 10px 10px;
      }

      .playing {
        display: flex;
        justify-content: center;
        align-items: center;
        color: #7b5bf5;
        font-weight: bold;
        text-align: center;
        margin-bottom: 8px;
      }

      .not-play {
        color: #888888;
        text-align: center;
        margin-bottom: 0;
      }

      /* Recently watched section */
      .recents-section {
        margin-top: 20px;
        padding-top: 15px;
        border-top: 1px solid rgba(123, 91, 245, 0.2);
      }

      .recents-title {
        color: #7b5bf5;
        font-size: 12px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 12px;
        text-align: center;
      }

      .recents-list {
        display: flex;
        flex-direction: column;
        gap: 8px;
      }

      .recent-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 6px 8px;
        background: rgba(123, 91, 245, 0.08);
        border-radius: 6px;
        transition: background 0.2s;
      }

      .recent-poster {
        width: 32px;
        height: 48px;
        border-radius: 4px;
        object-fit: cover;
        background: rgba(123, 91, 245, 0.2);
      }

      .recent-info {
        flex: 1;
        overflow: hidden;
      }

      .recent-title {
        color: #fff;
        font-size: 12px;
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .recent-subtitle {
        color: #888;
        font-size: 10px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .recent-type {
        font-size: 9px;
        color: #7b5bf5;
        background: rgba(123, 91, 245, 0.15);
        padding: 2px 6px;
        border-radius: 3px;
        text-transform: uppercase;
      }

      .media-info {
        color: #fff;
        font-weight: bold;
        font-size: 20px;
        text-align: center;
        margin-bottom: 5px;
      }

      .media-title {
        color: #b3b3b3;
        font-size: 16px;
        text-align: center;
        margin-bottom: 22px;
      }

      .logo {
        margin-left: 8px;
        width: 28px;
        height: 28px;
      }

      .cover {
        border-radius: 5px;
      }

      /* Film strip animation container */
      #film-strip {
        height: 30px;
        margin: -29px 0 0 0px;
        position: absolute;
        width: 300px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 4px;
      }

      /* Film frames that pulse like movie frames */
      .film-frame {
        background: linear-gradient(180deg, #7b5bf5 0%, #5a3fd4 100%);
        height: 8px;
        width: 12px;
        border-radius: 2px;
        opacity: 0.4;
        animation: flicker 1.5s ease-in-out infinite;
      }

      .film-frame:nth-child(1) { animation-delay: 0s; }
      .film-frame:nth-child(2) { animation-delay: 0.1s; }
      .film-frame:nth-child(3) { animation-delay: 0.2s; }
      .film-frame:nth-child(4) { animation-delay: 0.3s; }
      .film-frame:nth-child(5) { animation-delay: 0.4s; }
      .film-frame:nth-child(6) { animation-delay: 0.5s; }
      .film-frame:nth-child(7) { animation-delay: 0.6s; }
      .film-frame:nth-child(8) { animation-delay: 0.7s; }
      .film-frame:nth-child(9) { animation-delay: 0.8s; }
      .film-frame:nth-child(10) { animation-delay: 0.9s; }
      .film-frame:nth-child(11) { animation-delay: 1.0s; }
      .film-frame:nth-child(12) { animation-delay: 1.1s; }
      .film-frame:nth-child(13) { animation-delay: 1.2s; }
      .film-frame:nth-child(14) { animation-delay: 1.3s; }
      .film-frame:nth-child(15) { animation-delay: 1.4s; }

      @keyframes flicker {
        0%, 100% {
          opacity: 0.3;
          transform: scaleY(0.8);
        }
        50% {
          opacity: 1;
          transform: scaleY(1);
        }
      }

      /* Play button pulse animation */
      .play-indicator {
        position: absolute;
        margin: -26px 0 0 135px;
        width: 0;
        height: 0;
        border-left: 12px solid #7b5bf5;
        border-top: 7px solid transparent;
        border-bottom: 7px solid transparent;
        animation: pulse 2s ease-in-out infinite;
      }

      @keyframes pulse {
        0%, 100% {
          opacity: 0.6;
          transform: scale(1);
        }
        50% {
          opacity: 1;
          transform: scale(1.15);
        }
      }
    </style>
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      {% if media_title %}
        <div class="playing">
          Now watching on
          <!-- Stremio Logo SVG -->
          <svg class="logo" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient id="stremioGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#7b5bf5;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#5a3fd4;stop-opacity:1" />
              </linearGradient>
            </defs>
            <rect x="5" y="5" width="90" height="90" rx="15" fill="url(#stremioGrad)"/>
            <polygon points="38,25 38,75 78,50" fill="white"/>
          </svg>
        </div>
        <div class="media-info">{{media_info|safe}}</div>
        <div class="media-title">{{media_title|safe}}</div>
        
        <!-- Film strip animation -->
        <div id="film-strip">
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
          <div class="film-frame"></div>
        </div>
        <div class="play-indicator"></div>

        {% if cover_image %}
          <center>
            <img src="data:image/png;base64, {{img}}" width="300" height="450" class="cover" />
          </center>
        {% endif %}

        {% if recents and recents|length > 0 %}
        <div class="recents-section">
          <div class="recents-title">Recently Watched</div>
          <div class="recents-list">
            {% for item in recents %}
            <div class="recent-item">
              {% if item.poster_b64 %}
              <img class="recent-poster" src="data:image/jpeg;base64,{{item.poster_b64}}" alt=""/>
              {% else %}
              <div class="recent-poster"></div>
              {% endif %}
              <div class="recent-info">
                <div class="recent-title">{{item.title}}</div>
                <div class="recent-subtitle">{{item.info}}</div>
              </div>
              <span class="recent-type">{{item.type}}</span>
            </div>
            {% endfor %}
          </div>
        </div>
        {% endif %}

      {% else %}
        <div class="playing not-play">Nothing playing on Stremio</div>
        
        {% if recents and recents|length > 0 %}
        <div class="recents-section" style="margin-top: 15px; border-top: none;">
          <div class="recents-title">Recently Watched</div>
          <div class="recents-list">
            {% for item in recents %}
            <div class="recent-item">
              {% if item.poster_b64 %}
              <img class="recent-poster" src="data:image/jpeg;base64,{{item.poster_b64}}" alt=""/>
              {% else %}
              <div class="recent-poster"></div>
              {% endif %}
              <div class="recent-info">
                <div class="recent-title">{{item.title}}</div>
                <div class="recent-subtitle">{{item.info}}</div>
              </div>
              <span class="recent-type">{{item.type}}</span>
            </div>
            {% endfor %}
          </div>
        </div>
        {% endif %}
      {% endif %}

    </div>
  </foreignObject>
</svg>
