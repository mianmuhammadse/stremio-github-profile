<svg width="320" height="{{height}}" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-labelledby="cardTitle" role="img">
  <title id="cardTitle">Now watching on Stremio</title>
  <foreignObject width="320" height="{{height}}">
    <style>
      div {
        font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
      }

      .container {
        background-color: #{{background_color}};
        border-radius: 10px;
        padding: 10px 10px;
      }

      .playing {
        display: flex;
        justify-content: center;
        align-items: center;
        color: #7b5bf5;
        font-weight: bold;
        text-align: center;
        margin-bottom: 8px;
      }

      .not-play {
        color: #888888;
        text-align: center;
        margin-bottom: 0;
      }

      .media-info {
        color: #fff;
        font-weight: bold;
        font-size: 20px;
        text-align: center;
        margin-bottom: 5px;
      }

      .media-title {
        color: #b3b3b3;
        font-size: 16px;
        text-align: center;
        margin-bottom: 15px;
      }

      .logo {
        margin-left: 8px;
        width: 28px;
        height: 28px;
      }

      .cover {
        border-radius: 5px;
      }

      /* Karaoke style scrolling text effect */
      .karaoke-container {
        overflow: hidden;
        position: relative;
        height: 30px;
        margin-bottom: 10px;
      }

      .karaoke-text {
        position: absolute;
        white-space: nowrap;
        animation: scroll 8s linear infinite;
        color: #7b5bf5;
        font-size: 14px;
        font-weight: 600;
      }

      @keyframes scroll {
        0% { transform: translateX(100%); }
        100% { transform: translateX(-100%); }
      }

      /* Recently watched section */
      .recents-section {
        margin-top: 15px;
        padding-top: 12px;
        border-top: 1px solid rgba(123, 91, 245, 0.2);
      }

      .recents-title {
        color: #7b5bf5;
        font-size: 10px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 10px;
        text-align: center;
      }

      .recent-item {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 5px 0;
      }

      .recent-poster {
        width: 24px;
        height: 36px;
        border-radius: 3px;
        object-fit: cover;
        background: rgba(123, 91, 245, 0.2);
      }

      .recent-info {
        flex: 1;
        overflow: hidden;
      }

      .recent-title {
        color: #fff;
        font-size: 11px;
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .recent-subtitle {
        color: #888;
        font-size: 10px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    </style>
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      {% if media_title %}
        <div class="playing">
          Now watching on
          <svg class="logo" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient id="stremioGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#7b5bf5;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#5a3fd4;stop-opacity:1" />
              </linearGradient>
            </defs>
            <rect x="5" y="5" width="90" height="90" rx="15" fill="url(#stremioGrad)"/>
            <polygon points="38,25 38,75 78,50" fill="white"/>
          </svg>
        </div>
        <div class="media-info">{{media_info|safe}}</div>
        <div class="media-title">{{media_title|safe}}</div>
        
        <div class="karaoke-container">
          <div class="karaoke-text">ðŸŽ¬ {{media_info|safe}} â€¢ {{media_title|safe}} ðŸŽ¬</div>
        </div>

        {% if cover_image %}
          <center>
            <img src="data:image/png;base64, {{img}}" width="300" height="450" class="cover" />
          </center>
        {% endif %}

      {% else %}
        <div class="playing not-play">Nothing playing on Stremio</div>
      {% endif %}

      {% if recents and recents|length > 0 %}
      <div class="recents-section">
        <div class="recents-title">Recently Watched</div>
        {% for item in recents %}
        <div class="recent-item">
          {% if item.poster_b64 %}
          <img class="recent-poster" src="data:image/jpeg;base64,{{item.poster_b64}}" alt=""/>
          {% else %}
          <div class="recent-poster"></div>
          {% endif %}
          <div class="recent-info">
            <div class="recent-title">{{item.title}}</div>
            <div class="recent-subtitle">{{item.info}}</div>
          </div>
        </div>
        {% endfor %}
      </div>
      {% endif %}

    </div>
  </foreignObject>
</svg>
